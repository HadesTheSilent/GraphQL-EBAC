{
  "name": "pactum-contract",
  "version": "1.0.0",
  "description": "Testes de Contrato com Pactum",
  "main": "index.js",
  "scripts": {
    "test": "mocha ./test/exercicio/**/*.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=exercicio-report",
    "test:all": "mocha ./test/**/*.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=all-tests-report",
    "test:exercicio": "mocha ./test/exercicio/**/*.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=exercicio-report",
    "test:categories": "mocha ./test/exercicio/category.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=categories-report",
    "test:products": "mocha ./test/exercicio/product.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=products-report",
    "test:contract": "mocha ./test/exercicio/category-product.contract.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=contract-report",
    "test:gql": "mocha ./test/graphql/**/*.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=graphql-report",
    "test:rest": "mocha ./test/api/**/*.test.js --timeout 10000 --reporter mochawesome --reporter-options reportDir=reports,reportFilename=rest-report",
    "test:contractProvider": "mocha ./test/contract/loginProvider.test.js",
    "test:contractConsumer": "mocha ./test/contract/loginConsumer.test.js"
  },
  "keywords": [],
  "author": "ernestosbarbosa",
  "license": "ISC",
  "devDependencies": {
    "mocha": "^10.3.0",
    "pactum": "^3.6.0",
    "mochawesome": "^7.1.3",
    "joi": "^17.11.0",
    "@faker-js/faker": "^8.3.1"
  },
  "dependencies": {
    "pactum-flow-plugin": "^0.1.4",
    "pactum-matchers": "^1.1.6"
  }
}
